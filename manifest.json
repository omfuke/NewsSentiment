{
  "manifest_version": 2,
  "name": "Toxic Comment",
  "version": "1.0",
  "description": "Classifying the Comments",
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["jquery.min.js", "content.js"]
    }
  ],

  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icon16.png"
  }
}
